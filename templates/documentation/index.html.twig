{% extends 'base.html.twig' %}

{% block title %}Hello DocumentationController!{% endblock %}

{% block body %}
<style>
    .toprow { margin-top: 60px; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .container .row {
        margin-top: 60px;
    }
    .route span {
        margin-right: 20px;
    }
    .api {
        background: #F5F5F5;
    }
    .smtitle {
        font-weight: bold;
    }
    .api p, .api pre {
        padding: 0 10px;
    }
    .api p.route {
        padding: 5px 10px;
        color: white;
        font-weight: bold;
    }
</style>

<div class="container">

    <div class="row toprow">
        <h1>This blog is awesome, and this is how you may use this awesome API.</h1>
        <hr>
    </div>

    <div class="row" id="authentication">
        <div class="col-md-12">
            <h2>Authentication</h2>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-success route">
                    <span>GET</span>   /api/login_check
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Generate a JWT token. You will have to use this bearer token with your REST requests.
                </p>

                <span class="smtitle">Parameters</span> <br>
                <pre>
                    {
                        "username": [USERNAME:String],
                        "password": [PASSWORD:String],
                    }
                </pre>

                <p>
                    <span class="smtitle">Example</span> <br>
                </p>
                <pre>
                    {
                        "username": "admin",
                        "password": "admin",
                    }
                </pre>

            </div>
        </div>
    </div>

    <div class="row" id="categories">
        <div class="col-md-12">
            <h2>Categories</h2>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-success route">
                    <span>GET</span>   /api/categories
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Get all the categories and their content.
                </p>

            </div>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-success route">
                    <span>GET</span>   /api/categories/{id}
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Get a category by ID with its content.
                </p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-warning route">
                    <span>POST</span>   /api/categories
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Create a category.
                </p>

                <p>
                    <span class="smtitle">Parameters</span> <br>
                </p>
                <pre>
                    {
                        "name": [CATEGORY_NAME:String]
                    }
                </pre>

                <p>
                    <span class="smtitle">Example</span> <br>
                </p>
                <pre>
                    {
                        "name": "People"
                    }
                </pre>
            </div>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-info route">
                    <span>PUT</span>   /api/categories/{id}
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Update a category.
                </p>

                <p>
                    <span class="smtitle">Parameters</span> <br>
                </p>
                <pre>
                    {
                        "name": [CATEGORY_NAME:String]
                    }
                </pre>

                <p>
                    <span class="smtitle">Example</span> <br>
                </p>
                <pre>
                    {
                        "name": "People"
                    }
                </pre>
            </div>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-danger route">
                    <span>DELETE</span>   /api/categories/{id}
                </p>
                <p>
                    <span class="smtitle">Description</span> <br>
                    Delete a category and its content.
                </p>
            </div>
        </div>
    </div>

    <hr>

    <div class="row" id="authors">
        <div class="col-md-12">
            <h2>Authors</h2>
        </div>

        <div class="col-md-6">
            <div class="api">
                <p class="bg-success route">
